<%= form_for review do |f| %>
    

    <%= f.label :title %>
    <%= f.text_field :title %> <br>

    <%= f.label :content %>
    <%= f.text_area :content %> <br>

    <%= f.label :rating %>
    <%= f.select :rating, (1..5) %> <br>

    <%= f.label :recommend %>
    <%= f.check_box :recommend %> <br>

    <%= f.submit button %>
<% end %>