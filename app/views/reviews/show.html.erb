<h1><%= @review.game.name.capitalize %></h1>
<h3><%= @review.rating %> Star(s) - <%= @review.recommend ? "Would Recommend" : "Would Not Recommend" %></h3>
<h2><%= @review.title %></h2>
<p><%= @review.content %></p>

<%= button_to 'Edit Review', edit_game_review_path(@review.game, @review), method: :get %>
<%= button_to 'Delete Review', game_review_path(@review.game, @review), method: :delete %>
<%= button_to 'Show all Reviews', game_path(@review.game), method: :get %>
